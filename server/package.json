    "node-fetch": "^3.4.0"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "sinon": "^21.0.0",
    "supertest": "^6.3.3",
    "vitest": "^4.0.5"
  },
  "directories": {
    "test": "tests"
  },
  "keywords": []
}
