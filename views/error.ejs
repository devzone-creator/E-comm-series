<%- include('partials/head') %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto text-center">
        <div class="text-gray-400 mb-6">
            <svg class="mx-auto h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.268 18.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
        </div>
        
        <h1 class="text-2xl font-bold text-gray-900 mb-4">Oops! Something went wrong</h1>
        
        <p class="text-gray-600 mb-8">
            <%= message || 'An unexpected error occurred. Please try again later.' %>
        </p>
        
        <div class="space-y-3">
            <a href="/" class="block w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-200">
                Go Home
            </a>
            <button onclick="history.back()" class="block w-full bg-gray-100 text-gray-700 py-2 px-4 rounded-md hover:bg-gray-200 transition duration-200">
                Go Back
            </button>
        </div>
    </div>
</div>

<%- include('partials/footer') %>