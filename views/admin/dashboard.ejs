<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ATC AfriGlam - Authentic African Fashion</title>

    <link rel="stylesheet" href="/styles.css">
    <link rel="stylesheet" href="/admin.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&family=Playfair+Display:wght@400;500;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

        <div class="admin-container">
            <div class="admin-header">
                <h1>Admin Dashboard</h1>
                <p>Welcome back, <%= user.first_name %>!</p>
            </div>

            <!-- Statistics Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Users</h3>
                    <p class="stat-number">
                        <%= stats.totalUsers %>
                    </p>
                </div>
                <div class="stat-card">
                    <h3>Total Products</h3>
                    <p class="stat-number">
                        <%= stats.totalProducts %>
                    </p>
                </div>
                <div class="stat-card">
                    <h3>Total Orders</h3>
                    <p class="stat-number">
                        <%= stats.totalOrders %>
                    </p>
                </div>
                <div class="stat-card">
                    <h3>Categories</h3>
                    <p class="stat-number">
                        <%= stats.totalCategories %>
                    </p>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="quick-actions">
                <h2>Quick Actions</h2>
                <div class="action-buttons">
                    <a href="/admin/products" class="btn btn-primary">Manage Products</a>
                    <a href="/admin/orders" class="btn btn-secondary">View Orders</a>
                    <a href="/admin/users" class="btn btn-secondary">Manage Users</a>
                    <a href="/admin/products/new" class="btn btn-success">Add New Product</a>
                    <a href="/admin/inventory" class="btn btn-primary">Manage Inventory</a>
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="recent-orders">
                <h2>Recent Orders</h2>
                <% if (recentOrders.length> 0) { %>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Status</th>
                                <th>Total</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentOrders.forEach(order=> { %>
                                <tr>
                                    <td>
                                        <%= order.order_number %>
                                    </td>
                                    <td><span class="status-badge status-<%= order.status %>">
                                            <%= order.status %>
                                        </span></td>
                                    <td>â‚µ<%= order.total_amount %>
                                    </td>
                                    <td>
                                        <%= new Date(order.created_at).toLocaleDateString() %>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p>No recent orders</p>
                        <% } %>
            </div>

            <!-- Low Stock Alert -->
            <div class="low-stock-alert">
                <h2>Low Stock Products</h2>
                <% if (lowStockProducts.length> 0) { %>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Stock</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% lowStockProducts.forEach(product=> { %>
                                <tr>
                                    <td>
                                        <%= product.name %>
                                    </td>
                                    <td class="low-stock">
                                        <%= product.stock_quantity %>
                                    </td>
                                    <td><a href="/admin/products/<%= product.id %>/edit" class="btn btn-sm">Update
                                            Stock</a></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p>All products are well stocked!</p>
                        <% } %>
            </div>
        </div>

        <%- include('../partials/footer.ejs') %>
</body>

</html>