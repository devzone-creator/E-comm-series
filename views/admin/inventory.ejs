
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Manage Inventory - AfriGlam Admin</title>
    <link rel="stylesheet" href="/admin.css">
</head>
<body>
    <div class="admin-container">
        <%- include('../partials/admin-nav') %>

        <main class="main-content">
            <div class="main-header">
                <h1>Inventory Management</h1>
            </div>

            <div class="content-wrapper">
                <div class="card">
                    <div class="card-header">
                        <h2>All Products</h2>
                        <div class="search-bar">
                            <input type="text" id="searchInput" placeholder="Search by name or SKU...">
                            <button id="searchButton">Search</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="inventoryTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>SKU</th>
                                    <th>Category</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Inventory data will be populated here by JavaScript -->
                            </tbody>
                        </table>
                        <div class="pagination">
                            <!-- Pagination controls will be populated here -->
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>

    <script src="/js/inventory.js"></script>
</body>
</html>
